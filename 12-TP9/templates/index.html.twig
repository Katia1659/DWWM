{% extends 'base.html.twig' %}



{% block title %}Accueil{% endblock %}

{% block body %}

<a href="{{ path('article_new') }}">Ajouter un article</a>
<a href="{{ path('home') }}">Accueil</a>
<a href="{{ path('register')}}">Inscription</a>
<a href="{{ path('app_login')}}">Connexion</a>


<main role="main" class = "container">

{% for article in articles %}

<img src="{{ article.image }}" alt="{{ article.image }}">

<p>{{ article.description }}</p>

<a href="{{ path('article_show', {"id": article.id})}}">View</a>
<a href="{{ path('article_edit', {"id": article.id})}}">Editer</a>
<a href="{{ path('article_delete', {"id": article.id})}}" onclick="return confirm ('Are you sure to delete?')">Supprimer</a><br>


    
<small>{{ article.createdAt | date("d/m/Y")}}</small><br>
{% endfor %}

</main>   

{% endblock %}
