{% extends 'base.html.twig' %}

{% block title %}Mes ingredients{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not ingredients.items is same as ([]) %}
            {% for message in app.flashes('success') %}
                <div class="text-center alert alert-dismissible  alert-success mt-4">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %}
            <h1 class="text-center mb-4">Mes Ingredients({{ ingredients.items | length }})</h1>
            <div class="text-center">
            <a href="{{ path('ingredient.new') }}" class="btn btn-primary">
                Ajouter un ingrédient
            </a>
        </div>
            <div class="d-flex flex-wrap align-items-stretch mt-5">
                {% for ingredient in ingredients %}
                    <div class="card mt-5 mx-2" style="height: 300px; width: 400px " >
                        <img class="card-img-top" height="80px"  width="400px" src="" alt="img">
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-subtitle mb-2 text-muted align-content-end">{{ ingredient.createAt | ago(locale='fr')}}</h6>
                            <h4 class="card-title text-center">{{ ingredient.name }}</h4>
                            <h6 class="card-subtitle mb-2 text-muted text-center">{{ ingredient.price }} €</h6>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('ingredient.edit', {id: ingredient.id} ) }}" class="btn btn-outline-info ms-auto">Modifier</a>
                            <a onclick="return confirm('Voulez vous vraiment supprimer la recette ? ')"  href="{{ path('ingredient.del', {id: ingredient.id} ) }}" class="btn btn-outline-danger me-auto">Supprimer</a>
                        </div>
                    </div>
                {% endfor %}
            </div>


            <div class="navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(ingredients) }}
            </div>
        {% else %}
            {% for message in app.flashes('success') %}
                <div class="text-center alert alert-dismissible  alert-success mt-4">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %}
            <h4 class="text-center">Vous n'avez pas d'ingrédient</h4>
            <div class="text-center">
                <a href="{{ path('ingredient.new') }}" class="btn btn-primary">
                    Ajouter un ingrédient
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
