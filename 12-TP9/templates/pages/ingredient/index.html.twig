{% extends 'base.html.twig' %}

{% block title %}Mes ingredients
{% endblock %}

{% block body %}

	<div class="container ">
		<h1>Mes ingrédients</h1>

        <a href="{{ path('ingredient.new')}}" class="btn btn-primary mb-4">
            Créer un ingrédient
        </a>

        {% for message in app.flashes('success') %}
			<div class="alert alert-light ">
				{{ message }}
			</div>
		{% endfor %}

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Numéro</th>
					<th scope="col">Nom</th>
					<th scope="col">Prix</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Suppression</th>
				</tr>
			</thead>
			<tbody>

				{% for ingredient in ingredient %}
					<tr class="table-primary">
						<td> {{ ingredient.id }} </td>
						<td> {{ ingredient.nom }} </td>
						<td> {{ ingredient.prix }} </td>
                        <td>
                            <a href="{{path('ingredient.edit', {id: ingredient.id}) }}" class="btn btn-info">Modifier</a>
                        </td>
                        <td>
                            <a href="{{path('ingredient.delete', {id: ingredient.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
					</tr>
				{% endfor %}


			</tbody>
		</table>


	</div>

{% endblock %}
