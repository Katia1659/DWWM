{% extends 'base.html.twig' %}

{% block title %}Mes recettes{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not recipes.items is same as ([]) %}
            {% for message in app.flashes('success') %}
                <div class="text-center alert alert-dismissible  alert-success mt-4">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %}
            <h1 class="text-center mb-4">Mes Recettes({{ recipes | length }})</h1>
            <div class="text-center">
                <a href="{{ path('recipe.new') }}" class="btn btn-success ">Ajouter une recette</a>
            </div>
            <div class="d-flex flex-wrap align-items-stretch mt-5">
                {% for recipe in recipes %}
                    <div class="card mt-5 mx-2" style="height: auto; width: 400px " >
                        <img class="card-img-top" height="80px"  width="400px" src="" alt="img">
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-subtitle mb-2 text-muted align-content-end">Ajouté {{ recipe.createAt | ago(locale='fr')}} €</h6>
                            {% if not recipe.updateAt | ago() is same as (recipe.createAt | ago()) %}
                                <h6 class="card-subtitle mb-2 text-muted align-content-end">Mis a jour {{ recipe.updateAt | ago(locale='fr')}} €</h6>
                            {% endif %}
                            <h4 class="card-title text-center">{{ recipe.name }}</h4>
                            <h6 class="card-subtitle mb-2 text-muted text-center">
                                Pour: {{ recipe.numberOfPer}} personne.<br>

                                Cout: {{ recipe.price }} €
                            </h6>
                            <p class="card-text">
                                Ingredients:<br>-{{ recipe.ingredientslist| join('<br> -') }}<br>Description :<br>{{ recipe.stepDescription }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('recipe.edit', {id: recipe.id} ) }}" class="btn btn-outline-info ms-auto">Modifier</a>
                            <a onclick="return confirm('Voulez vous vraiment supprimer la recette ? ')" href="{{ path('recipe.del', {id: recipe.id} ) }}" class="btn btn-outline-danger me-auto">Supprimer</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(recipes) }}
            </div>
        {% else %}
            {% for message in app.flashes('success') %}
                <div class="text-center alert alert-dismissible  alert-success mt-4">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %}
            <h4 class="text-center">Vous n'avez pas de recette</h4>
            <div class="text-center">
                <a href="{{ path('recipe.new') }}" class="btn btn-success ">Ajouter une recette</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
